
<% include ../partials/header%>

<div class="container-fluid">

    <header class="jumbotron">
      <div class="container">
          <h1>Snakes of or lifes</h1>

          <p> View all the dangerous snakes of our world </p>

          <p> <!--for spacing -->
            <a class= "btn btn-primary btn-lg" href="/snakes/new"> New Snake</a><!--button styling -->
          </p>
      </div>
    </header>
  <div class="row text-center" style= "display:flex; flex-wrap:wrap;" >
        <% snakes.forEach (function(elem, index){ %>

          <div class="col-md-3 col-sm-6 ">
            <div class="thumnail">
                  <img  src="<%= elem.image %>" alt="<%= elem.image %>">
                  <div class="caption">
                    <h6 > <%= elem.name %> </h6>
                  </div>
                  <p>
                    <a href ="/snakes/<%=elem._id%>" class="btn btn-primary">More Info</a>
                  </p>
            </div>
          </div>
        <%})%>
  </div>

</div>
<% include ../partials/footer%>
