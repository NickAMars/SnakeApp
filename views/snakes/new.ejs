
<% include ../partials/header%>
<div class="container" style= "margin-top: 40px">
    <h1 style= "text-align: center; margin-bottom: 25px;">Make A New Snake</h1>
    <div class="row">
        <div style = "width: 30%; margin: 0 auto;">
          <form action="/snakes" method="POST">
            <div class="form-group">
              <input class = "form-control" type="text" name= "snakes[name]" placeholder="name">
            </div>
            <div class="form-group">
              <input  class = "form-control" type="text" name= "snakes[image]" placeholder="url image">
            </div>
            <div class="form-group">
              <input  class = "form-control" type="number" name= "snakes[price]" placeholder="$">
            </div>
            <div class="form-group">
              <input  class = "form-control" type="text" name= "snakes[description]" placeholder="description">
            </div>
            <div class="form-group">
              <button class = "btn btn-lg btn-default btn-block">Submit</button>
            </div>
          </form>
          <a href="/snakes">Go Back</a>
        </div>
     </div>
</div>


